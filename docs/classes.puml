@startuml "Modelo conceitual"

class People {
    id: Long
    name : String
    phone: String
    comments: String
}

class Professional {
    active: boolean    
}

class Client {
    gender: Enum
    dayOfBirth: LocalDate
}


'private or health insurance
class AppoitmentType {
    id: Integer
    type: String
}

class WorkSchedule {
    id: Long
    dayWeek: DayOfWeek
    startTime: Time
    endTime: Time
}

class Area {
    id: Integer
    name: String
}

class Appointment {
    id: Long
    date: LocalTime
    startTime: Time
    comments: String
}

class BlockedDate {
    id: Long
    date: LocalDate
    startTime: Time
    endTime: Time
}

People              <|--            Client
People              <|--            Professional
Professional        o--     "0..*"  Area
Professional        *--     "0..*"  WorkSchedule
Professional        *--     "0..*"  BlockedDate
Appointment         o--     "0..1"  AppoitmentType
Appointment "0..*"  -l-     "0..1"  Client            : has ->
Appointment "0..*"  -r-     "0..1"  Professional      : <- has  



@enduml